
<div style="background: url(https://s3.amazonaws.com/mctvenueimg/vHeader1.jpg) no-repeat center center;position: absolute;
                    width: 100%;top:0;left:0;z-index: -1 ">
<br/><br/><br/>
<div class="row">
  <div class="col-sm-9">
    <div class="card mx-auto">
      <div class="card-body">
        <h5 class="card-title">New Venue</h5>
        <p class="card-text">
          <%= form_for @venue, html: { multipart: true } do |f| %>
            <% if @venue.errors.any? %>
              <div id="error_explanation" class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <h4><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h4>
          
                <ul>
                <% @venue.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
          
            <div class="form-group">
              <%= f.label :description %><br>
              <%= f.text_field :description, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :Type %><br>
              <%= f.text_field :vType, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :Size %><br>
              <%= f.text_field :vSize, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :Num %><br>
              <%= f.text_field :num, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :Location %><br>
              <%= f.text_field :location, class:'form-control' %>
            </div>
            
            <div class="form-group">
              <%= f.label :image %>
              <%= f.file_field :image, class: "form-control" %>
            </div>
            <div class="actions float-right">
              <%= f.submit "create venue", class:'btn btn-secondary' %>
            </div>
          <% end %>
          </p>
      </div>
    </div>
  </div>
  </div>
  </div>