<div class="" style="background: url('https://s3.amazonaws.com/mctvenueimg/vHeaderMic1.png') center center;position: absolute;
                    width: 100%; height: 800px; top:0;left:0;z-index: -1 ">
  <br/><br/><br/><br/>
<p id="notice"><%= notice %></p>

  <div class="container-fluid form-inline">
    <div class="col-md-3 card" style="background-color: #f9f4e1;">
      <br>
      <%= image_tag @venue.image.url(:medium) %>
      <h4><%= @venue.description %></h4>
      <p>
        <strong>Type:</strong>
        <%= @venue.vType %>
      </p>
      <p>
        <strong>Size:</strong>
        <%= @venue.vSize %>
      </p>
      <p>
        <strong>Num of people:</strong>
        <%= @venue.num %>
      </p>
      <p>
      <strong>Location:</strong>
      <%= @venue.location %>
    </p>
    <% if @venue.user == current_user %>
      <%= link_to 'Edit', edit_venue_path(@venue) %> |
    <% end %>
    <%= link_to 'Back', root_path %>
    </div>
    <div class="col-md-1"> </div>
    <div class="col-md-8 card">
      <br/>
    <h4>book this venue</h4>
    <br/>
    <div class="form-inline">
      <label class="col-md-2">Name</label>
      <input type="text" class="form-control col-md-8">
    </div>
    <div class="form-inline">
      <label class="col-md-2">Event type</label>
      <input type="text" class="form-control col-md-8">
    </div>
    <div class="form-inline">
      <label class="col-md-2">Guests</label>
      <input type="text" class="form-control col-md-8">
    </div>
    <div class="form-inline">
      <label class="col-md-2">Date</label>
      <input type="text" class="form-control col-md-8">
    </div>
    <div class="form-inline">
      <label class="col-md-2">Requests</label>
      <textarea type="text" class="form-control col-md-8" rows="5"></textarea>
    </div>
    <br/><br/><br/>
    <div class="form-inline">
      <button type="button" class="btn btn-secondary btn-block">send request</button>
    </div>
    <br/>
    </div>
  </div>


</div>